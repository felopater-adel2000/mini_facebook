<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.faculty.minifbapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MiniFBTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AddPostActivity"
            android:label="@string/add_new_post_text" />
        <activity
            android:name=".PostDetailsActivity"
            android:label="@string/post_details_text" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/sign_up_activity_text" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_activity_text">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/home_text"
            android:launchMode="singleTop" />
    </application>

</manifest>